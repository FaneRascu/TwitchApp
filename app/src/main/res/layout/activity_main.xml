<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.activity.MainActivity">

    <Button
        android:id="@+id/buttonTopGames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Top Games"
        app:layout_constraintTop_toTopOf="parent"
        tools:clickable="true"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/buttonTopStreams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Top Streams"
        app:layout_constraintTop_toBottomOf="@+id/buttonTopGames"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/buttonTopFeaturedStreams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Top Featured Streams"
        app:layout_constraintTop_toBottomOf="@+id/buttonTopStreams"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/buttonTopCommunities"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="16dp"
        android:text="Top Communities"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonTopFeaturedStreams" />
</android.support.constraint.ConstraintLayout>